{
  "project": {
    "name": "SoloCreate1110.github.io",
    "description": "ブラウザゲームコレクション",
    "rules": {
      "codeStyle": {
        "indentSize": 2,
        "useTabs": false,
        "lineEnding": "lf",
        "maxLineLength": 100,
        "quoteStyle": "single"
      },
      "fileNaming": {
        "html": "kebab-case",
        "css": "kebab-case",
        "js": "camelCase"
      },
      "documentation": {
        "requireComments": true,
        "commentStyle": "jsdoc",
        "language": "ja"
      },
      "testing": {
        "requireTests": false,
        "testFramework": "jest"
      },
      "security": {
        "noConsoleLog": true,
        "noEval": true,
        "noInnerHTML": true
      },
      "performance": {
        "maxFileSize": "100KB",
        "requireLazyLoading": true,
        "requireImageOptimization": true
      },
      "accessibility": {
        "requireAltText": true,
        "requireAriaLabels": true,
        "requireSemanticHTML": true
      },
      "git": {
        "branchNaming": "feature/description",
        "commitMessageFormat": "type: description",
        "requirePullRequest": true
      }
    },
    "linting": {
      "eslint": {
        "enabled": true,
        "config": {
          "extends": [
            "eslint:recommended",
            "plugin:html/recommended"
          ],
          "rules": {
            "no-console": "warn",
            "no-unused-vars": "warn",
            "no-alert": "warn"
          }
        }
      },
      "stylelint": {
        "enabled": true,
        "config": {
          "extends": "stylelint-config-standard",
          "rules": {
            "indentation": 2,
            "string-quotes": "single",
            "max-line-length": 100
          }
        }
      }
    },
    "formatting": {
      "prettier": {
        "enabled": true,
        "config": {
          "singleQuote": true,
          "tabWidth": 2,
          "printWidth": 100,
          "trailingComma": "es5",
          "semi": true
        }
      }
    },
    "editor": {
      "formatOnSave": true,
      "formatOnPaste": true,
      "trimTrailingWhitespace": true,
      "insertFinalNewline": true,
      "rulers": [100],
      "wordWrap": "off"
    },
    "ai": {
      "codeCompletion": {
        "enabled": true,
        "language": "ja",
        "contextLines": 10
      },
      "codeReview": {
        "enabled": true,
        "checkSecurity": true,
        "checkPerformance": true,
        "checkAccessibility": true
      }
    }
  }
} 